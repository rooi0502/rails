<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag("/images/icon/no-image.png") %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>